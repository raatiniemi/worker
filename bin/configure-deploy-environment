#!/bin/bash
if [ -z "${GOOGLE_PLAY_ANDROID_DEVELOPER_KEY}" ]; then
  echo "No Google Play Android developer key is available, ensure that \$GOOGLE_PLAY_ANDROID_DEVELOPER_KEY is set for project.";
  exit 1;
fi;

if [ -z "${GOOGLE_PLAY_ANDROID_DEVELOPER_KEY_NAME}" ]; then
  echo "No name for the Google Play Android developer key is available, ensure that \$GOOGLE_PLAY_ANDROID_DEVELOPER_KEY_NAME is set for project.";
  exit 1;
fi;

echo "${GOOGLE_PLAY_ANDROID_DEVELOPER_KEY}" > "app/${GOOGLE_PLAY_ANDROID_DEVELOPER_KEY_NAME}";
