<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvProjectsItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/projects_item_card_view_margin_vertical"
    android:layout_marginBottom="@dimen/projects_item_card_view_margin_vertical"
    android:layout_marginLeft="@dimen/projects_item_card_view_margin_horizontal"
    android:layout_marginRight="@dimen/projects_item_card_view_margin_horizontal"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tvTimeSummary"
                android:textStyle="bold"
                tools:text="Project name"
                />

            <TextView
                android:id="@+id/tvTimeSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tvName"
                android:layout_alignBottom="@+id/tvName"
                android:layout_marginStart="@dimen/projects_item_time_margin_start"
                android:textColor="@color/textSecondary"
                tools:text="24h 25m"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTop"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/projects_item_toolbar_divider"
            >

            <ImageButton
                android:id="@+id/ibClockActivityToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                android:contentDescription="@string/fragment_projects_item_clock_in"
                android:background="@drawable/projects_item_action_clock_activity_toggle_background"
                android:src="@drawable/projects_item_action_clock_activity_toggle"
                />

            <ImageButton
                android:id="@+id/ibClockActivityAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ibClockActivityToggle"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                android:contentDescription="@string/fragment_projects_item_clock_in_at"
                android:background="@android:color/transparent"
                android:src="@drawable/projects_item_action_clock_activity_at"
                />

            <ImageButton
                android:id="@+id/ibDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ibClockActivityAt"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                android:contentDescription="@string/fragment_projects_item_delete"
                android:background="@android:color/transparent"
                android:src="@drawable/projects_item_action_delete"
                />

            <TextView
                android:id="@+id/tvClockedInSince"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/ibDelete"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="end|center_vertical"
                android:textColor="@color/textSecondary"
                tools:text="Since 07:45 (8h 50m)"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
