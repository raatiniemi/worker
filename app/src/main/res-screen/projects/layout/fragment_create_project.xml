<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_create_project"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/fragment_dialog_padding_vertical"
    android:paddingBottom="@dimen/fragment_dialog_padding_vertical"
    android:paddingStart="@dimen/fragment_dialog_padding_horizontal"
    android:paddingEnd="@dimen/fragment_dialog_padding_horizontal"
    >

    <TextView
        android:id="@+id/fragment_create_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_create_project_description"
        />

    <EditText
        android:id="@+id/fragment_create_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/fragment_dialog_text_size"
        android:hint="@string/fragment_create_project_name_hint"
        android:backgroundTint="@color/accent"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="UnusedAttribute">

        <requestFocus />

    </EditText>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/fragment_create_project_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/fragment_create_project_submit"
            android:padding="5dp"
            android:text="@string/fragment_create_project_dismiss"
            android:textColor="@drawable/button_foreground"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/fragment_create_project_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:text="@string/fragment_create_project_submit"
            android:textColor="@drawable/button_foreground"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

    </RelativeLayout>

</LinearLayout>
