<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:title="@string/activity_settings_project_general"
        >

        <CheckBoxPreference
            android:key="settings_project_confirm_clock_out"
            android:title="@string/activity_settings_project_confirm_clock_out_title"
            android:summary="@string/activity_settings_project_confirm_clock_out_summary"
            />

        <ListPreference
            android:key="settings_project_time_summary"
            android:title="@string/activity_settings_project_time_summary_title"
            android:summary="@string/activity_settings_project_time_summary_summary"
            android:entries="@array/project_time_summary_alternative_text"
            android:entryValues="@array/project_time_summary_alternative_value"
            />

        <ListPreference
            android:key="settings_project_time_sheet_summary_format"
            android:title="@string/activity_settings_project_time_sheet_summary_format_title"
            android:summary="@string/activity_settings_project_time_sheet_summary_format_summary"
            android:entries="@array/project_time_sheet_summary_format_alternative_text"
            android:entryValues="@array/project_time_sheet_summary_format_alternative_value"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/activity_settings_project_ongoing_notification"
        >

        <CheckBoxPreference
            android:key="settings_project_ongoing_notification_enable"
            android:title="@string/activity_settings_project_ongoing_notification_enable"
            />

        <CheckBoxPreference
            android:key="settings_project_ongoing_notification_chronometer"
            android:title="@string/activity_settings_project_ongoing_notification_chronometer"
            android:summary="@string/activity_settings_project_ongoing_notification_chronometer_summary"
            />

    </PreferenceCategory>

</PreferenceScreen>
