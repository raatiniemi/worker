<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="@string/activity_settings_project_general">

        <androidx.preference.CheckBoxPreference
            android:key="settings_project_confirm_clock_out"
            android:summary="@string/activity_settings_project_confirm_clock_out_summary"
            android:title="@string/activity_settings_project_confirm_clock_out_title" />

        <androidx.preference.ListPreference
            android:entries="@array/project_time_summary_alternative_text"
            android:entryValues="@array/project_time_summary_alternative_value"
            android:key="settings_project_time_summary"
            android:summary="@string/activity_settings_project_time_summary_summary"
            android:title="@string/activity_settings_project_time_summary_title" />

        <androidx.preference.ListPreference
            android:entries="@array/project_time_report_summary_format_alternative_text"
            android:entryValues="@array/project_time_report_summary_format_alternative_value"
            android:key="settings_project_time_report_summary_format"
            android:summary="@string/activity_settings_project_time_report_summary_format_summary"
            android:title="@string/activity_settings_project_time_report_summary_format_title" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/activity_settings_project_ongoing_notification">

        <androidx.preference.CheckBoxPreference
            android:key="settings_project_ongoing_notification_enable"
            android:title="@string/activity_settings_project_ongoing_notification_enable" />

        <androidx.preference.CheckBoxPreference
            android:key="settings_project_ongoing_notification_chronometer"
            android:summary="@string/activity_settings_project_ongoing_notification_chronometer_summary"
            android:title="@string/activity_settings_project_ongoing_notification_chronometer_title" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>
