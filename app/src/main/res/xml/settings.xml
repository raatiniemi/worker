<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory android:title="@string/settings_title">

        <androidx.preference.CheckBoxPreference
            android:key="settings_project_confirm_clock_out"
            android:summary="@string/settings_project_confirm_clock_out_summary"
            android:title="@string/settings_project_confirm_clock_out_title" />

        <androidx.preference.ListPreference
            android:entries="@array/project_time_summary_alternative_text"
            android:entryValues="@array/project_time_summary_alternative_value"
            android:key="settings_project_time_summary"
            android:summary="@string/settings_project_time_summary_summary"
            android:title="@string/settings_project_time_summary_title" />

        <Preference
            android:key="settings_project"
            android:title="@string/settings_project_title"
            app:fragment="me.raatiniemi.worker.features.settings.project.view.ProjectFragment" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/settings_about_title">

        <Preference
            android:key="settings_about_version"
            android:title="@string/settings_about_version_title" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>
